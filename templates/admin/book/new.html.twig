{% extends 'base.html.twig' %}

{% block title %}Ajout de livres{% endblock %}

{% block content %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    
    <div class="container w-50 m-auto">
        <div class="example-wrapper">
            <h1>Ajout de livres</h1>
            
            {{ form_start(form) }}
                {{ form_row(form.title, {label: 'Titre'}) }}
                {{ form_row(form.isbn, {label: 'ISBN'}) }}
                {{ form_row(form.cover, {label: 'Couverture'}) }}
                {{ form_row(form.editedAt, {label: 'Date de modification'}) }}
                {{ form_row(form.plot, {label: 'Résumé'}) }}
                {{ form_row(form.pageNumber, {label: 'Nombre de pages'}) }}
                {{ form_row(form.status, {label: 'Status'}) }}
                {{ form_row(form.editor, {label: 'Éditeur'}) }}
                {{ form_row(form.authors, {label: 'Auteur'}) }}
               
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">Envoyer</button>
        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
