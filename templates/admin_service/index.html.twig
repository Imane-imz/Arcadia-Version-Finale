{% extends 'base.html.twig' %}

{% block title %}Liste des services{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="text-center">
    <h1>Les activités d'Arcidia</h1>

    <div class="container">
        <div class="row">
            <div class="col-3 p-3">
                <ul class="list-group list-group-flush">
                    {% for service in services %}
                        <div class="card" style="width: 18rem;">
                            <img src="../images/Restaurant1" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h4 class="mb-1">{{ service.nom }}</h4>
                                    <a href="{{ path('app_admin_service_show', {id: service.id}) }}" class="btn btn-primary">En savoir plus</a>
                                </div>
                        </div>
                        {% else %}
                        <li>Aucun enregistrement en base de données.</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

</div>
{% endblock %}
