{% extends 'base.html.twig' %}

{% block title %}{Détail d'un auteur}{% endblock %}

{% block content %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

<div class="example-wrapper">
    <h1>{{service.nom}}</h1>
        {% if service is not null %}
            <div class="container">
                    <div class="card mb-1 m-auto col" style="width: 100%;">
                        <div class="card-body">
                            <div class="card-title d-flex justify-content-between">
                                <h4 class="mb-1 row">{{ service.nom }}</h4>
                                <p class="row">{{ service.description }}</p>
                            </div>
                        </div>
                    </div>
              </div>  
        {% else %}
            <div>Service non trouvé</div>
        {% endif %}
    <a href="{{ path('app_admin_service_index') }}" class="btn btn-primary">Retour</a>
    <a href="{{ path('app_admin_service_edit', {id: service.id}) }}" class="btn btn-warning">Éditer</a>
</div>

{% endblock %}