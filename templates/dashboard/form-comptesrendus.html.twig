<section>
    <div class="bg_dark text-white">
        <div class="container">
            <div>
                <h1 class="m-4 p-4">Nouveau compte rendu</h1>
            </div>

            <form class="g-3">
                <div class="p-3">
                    <label for="inputRace" class="form-label text-white">Race</label>
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Sélectionner la race de l'animal</option>
                        <option value="1">Lion</option>
                        <option value="2">Tigre</option>
                        <option value="3">Éléphant</option>
                        <option value="4">Tortue</option>
                        <option value="5">Loutre</option>
                        <option value="6">Alligator</option>
                        <option value="7">Perroquet</option>
                        <option value="8">Flamant</option>
                        <option value="9">Autruche</option>
                    </select>
                </div>
                <div class="p-3">
                    <label for="inputAnimal" class="form-label text-white">Animal</label>
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Sélectionner l'animal</option>
                        <option value="1">Léo</option>
                        <option value="2">Léa</option>
                        <option value="3">Tigro</option>
                        <option value="4">Tigra</option>
                        <option value="5">Phanto</option>
                        <option value="6">Fanta</option>
                        <option value="7">Torto</option>
                        <option value="8">Torta</option>
                        <option value="9">Loutro</option>
                        <option value="10">Loutra</option>
                        <option value="11">Gator</option>
                        <option value="12">Gatora</option>
                        <option value="13">Rocco</option>
                        <option value="14">Rocca</option>
                        <option value="15">Flamo</option>
                        <option value="16">Flama</option>
                        <option value="17">Autro</option>
                        <option value="18">Autra</option>
                    </select>
                </div>
                <div class="p-3">
                    <label for="inputState" class="form-label text-white">État de l'animal</label>
                    <input type="text" class="form-control" id="inputState" placeholder="Entrer l'état de l'animal">
                </div>
                <div class="p-3">
                    <label for="inputFood" class="form-label text-white">Nourriture</label>
                    <input type="text" class="form-control" id="inputFood" placeholder="Entrer la nourriture donnée">
                </div>
                <div class="p-3">
                    <label for="inputGrams" class="form-label text-white">Gramage</label>
                    <div class="row">
                        <input type="text" class="col form-control" id="inputGrams">
                        <p class="col">gr</p>
                    </div>
                </div>
                <div class="p-3">
                    <label for="inputDate" class="form-label text-white">Date de passage</label>
                    <input type="date" class="form-control" id="inputDate">
                </div>
                <div class="p-3">
                    <label for="inputDetails" class="form-label text-white">Détails de l'état de l'animal</label>
                    <textarea type="text" class="form-control" id="inputDetails" placeholder="Entrer les détails de l'état de l'animal"></textarea> 
                </div>
                <div class="p-3">
                    <button type="submit" class="btn bg_primary text-white">Soumettre le compte-rendu</button>
                </div>
            </form>
        </div>
    </div>
</section>